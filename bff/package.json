{
  "name": "bff",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start:watch": "nodemon npm run start",
    "build": "tsc",
    "dev": "nodemon src/index.js"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "dependencies": {
    "axios": "^0.19.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/node": "^13.1.6",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.1",
    "typescript": "^3.7.4"
  }
}
